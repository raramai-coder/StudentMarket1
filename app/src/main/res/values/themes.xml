<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <!-- region Base application theme. -->
    <style name="Theme.StudentMarket" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_teal</item>
        <item name="colorPrimaryVariant">@color/primary_teal</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/textBar_teal</item>
        <item name="colorSecondaryVariant">@color/rating_star</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!--initializing button styles for all buttons in app-->
        <item name="materialButtonStyle">@style/buttonStyle</item>

        <!-- initializing style for all edit texts-->
        <item name="editTextStyle">@style/editTextStyle</item>

        <!--initializing bottom navigation bar style -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>

        <!--initializing style for all cardviews for the products cards -->
        <item name="materialCardViewStyle">@style/productCard</item>
        <item name="cardViewStyle">@style/productCard</item>

        <!-- initializing style for all text-->
        <item name="android:textViewStyle">@style/textStyle</item>

        <item name="android:imageButtonStyle">@style/imageButtonStyle</item>



    </style>
    <!-- endregion -->


    <!--region Button -->
    <!--Button style-->
    <style name="buttonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundColor">@color/primary_teal</item>
        <item name="android:colorPressedHighlight">@color/textBar_teal</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textColor">@color/black</item>
        <!-- border --> TODO come and fix border
        <item name="background">@drawable/border</item>

        <!--<stroke android:width="2dp" android:color="@color/black" />-->

    </style>
    <!--endregion -->

    <style name="imageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="background">@color/primary_teal</item>
        <item name="endIconTint">@color/primary_teal</item>
    </style>

    <!--region EditText-->
    <!--EditText widget style-->
    <style name="editTextStyle" parent="Widget.AppCompat.EditText">
        <item name="backgroundTint">@color/primary_teal</item>
        <!--create background square --> TODO come and fix background color omg
        <item name="background">@drawable/edit_text_background</item>
        <item name="android:width">356dp</item>
    </style>

    <!--Text Input Layout style, still need to figure out how to apply this layout to all-->
    <style name="textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/textBar_teal</item>
    </style>
    <!--endregion-->

    <!--region Navigation Bar-->
    <!--bottom Navigation bar style-->
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/nav_bar</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="menu">@menu/navigation_bar</item>
    </style>

    <style name="Theme.StudentMarket.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.StudentMarket.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.StudentMarket.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- endregion -->

    <!-- region Product Card-->
    <!--The theme for the product card -->
    <style name="productCard" parent="CardView">
        <item name="cardBackgroundColor">@color/product_bg</item>
        <item name="cardCornerRadius">25dp</item>

    </style>
    <!-- endregion -->

    <!--region Text -->
    <!--The style for all the text across the application -->
    <style name="textStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
    </style>
    <!--endregion-->

</resources>